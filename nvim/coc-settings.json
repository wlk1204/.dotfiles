{
  /* formatOnSave hot */
  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "scss",
    "less",
    "json",
    "markdown",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "sh"
  ],

  /* coc-stylelintplus */
  "stylelintplus.enable": true,
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.autoFixOnFormat": true,
  "stylelintplus.validateOnSave": true,
  "stylelintplus.filetypes": ["scss", "less"],

  /* coc-eslint hot */
  "eslint.autoFixOnSave": true /* cold */,

  /* coc-prettier hot */
  "prettier.enable": false /* cold */,
  "prettier.disableLanguages": ["vue"],
  "prettier.bracketSpacing": true,
  "prettier.printWidth": 80,
  "prettier.semi": true,
  "prettier.singleQuote": true,

  /* coc-tsserver */
  "tsserver.enable": true,
  "tsserver.formatOnType": true,
  "tsserver.enableJavascript": true,
  "javascript.format.enabled": false, /* js 不自动格式化 */
  "javascript.showUnused": true,
  "typescript.showUnused": true,
  "typescript.format.enabled": true,
  "typescript.check.npmIsInstalled": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "auto",
  "typescript.suggest.jsdoc.generateReturns": true,

  /* diagnostic hot */
  "diagnostic.enable": true /* cold */,
  "diagnostic.enableSign": true, 
  "diagnostic.infoSign": "",
  "diagnostic.errorSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.warningSign": "",

  /* coc-git hot */
  "git.enableGutters": true /* cold */,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGBlameToVirtualText": true,
  "git.showCommitInFloating": true,
  "git.semanticCommit.scope": true
}
