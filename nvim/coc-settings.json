{
  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.reveal.whenOpen": false,
  "explorer.file.reveal.auto": true,
  "explorer.width": 30,
  "explorer.buffer.root.template": "[icon & 1] OPEN EDITORS",
  "explorer.file.root.template": "[icon & 1] PROJECT ([root])",
  "explorer.keyMappings.global": {
    "o": ["expandable?", ["wait", "expanded?", "collapse", "expand"], "open"],
    "s": "open:vsplit",
    "S": "open:split",
    "mm": "rename",
    "mc": "copyFile",
    "C": "copyFile",
    "md": "delete",
    "D": "delete",
    "ma": "addFile",
    "mA": "addDirectory"
  },

  /* coc-eslint hot */
  "eslint.format.enable": true,
  "eslint.autoFixOnSave": true /* cold */,
  "eslint.fixOnSaveTimeout": 0,
  "eslint.alwaysShowStatus": true,

  /* coc-prettier hot */
  "prettier.enable": false /* cold */,
  "prettier.disableLanguages": [],
  "prettier.bracketSpacing": true,
  "prettier.printWidth": 80,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "coc.preferences.formatOnSaveFiletypes": [
    // "html",
    "css",
    "scss",
    "less",
    "json",
    "markdown",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact",
    "sh"
    // "vue"
  ],

  /* coc-stylelintplus */
  "stylelintplus.enable": true,
  "stylelintplus.autoFixOnSave": true,
  "stylelintplus.autoFixOnFormat": true,
  "stylelintplus.validateOnSave": true,
  "stylelintplus.filetypes": ["scss", "less"],

  /* coc-vetur */
  "vetur.format.enable": true,
  "vetur.trace.server": "verbose",
  "vetur.format.defaultFormatter.js": "vscode-typescript",

  /* coc-tsserver */
  "tsserver.enable": true,
  "tsserver.formatOnType": true,
  "tsserver.enableJavascript": true,
  "javascript.format.enabled": true /* js 自动格式化 */,
  "javascript.showUnused": true,
  "typescript.showUnused": true,
  "typescript.format.enabled": false /* !!!! */,
  "typescript.check.npmIsInstalled": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "auto",
  "typescript.suggest.jsdoc.generateReturns": true,

  /* diagnostic hot */
  "diagnostic.enable": true /* cold */,
  "diagnostic.enableSign": true,
  "diagnostic.infoSign": "",
  "diagnostic.errorSign": "",
  "diagnostic.hintSign": "",
  "diagnostic.warningSign": "",

  /* coc-git hot */
  "git.enableGutters": true /* cold */,
  "git.addedSign.hlGroup": "GitGutterAdd",
  "git.changedSign.hlGroup": "GitGutterChange",
  "git.removedSign.hlGroup": "GitGutterDelete",
  "git.topRemovedSign.hlGroup": "GitGutterDelete",
  "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",
  "git.addGBlameToVirtualText": true,
  "git.showCommitInFloating": true,
  "git.semanticCommit.scope": true
}
